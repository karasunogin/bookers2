<div>
  <%= image_tag @book.get_image %>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>
  <p><%= image_tag 'no_image.jpg' %></p>
  <P><%= @book.user.name %></P>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy", books_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
  <% end %>
</div>
