<%= flash[:notice] %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book_new, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          <tr>
          </tr>
        </thead>

      <tbody>
        <tr>
        <div>
          <%= link_to books_path(@book.id) do %>
          <%#= image_tag @book.get_image %>
          <% end %>
          <td>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <P><%= link_to @book.user.name, user_path(@book.user.id) %></P>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
            <% if @book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", book_path, method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
        </tr>
        </div>
      </tbody>
      </table>
    </div>
  </div>
</div>
