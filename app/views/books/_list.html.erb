<h2>User info</h2>
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <h3>name <%= user.name %></h3>
  <h3>introduction </h3>
  <% if user == current_user %>
    <%= link_to edit_user_path(user), target: "_blank" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>

