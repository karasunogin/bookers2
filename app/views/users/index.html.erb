<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    <div class="col-lg-8">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
             <% @users.each do |user| %>
        <tbody>
          <th>
          <tb><%= image_tag user.get_profile_image(100,100) %></tb>
          <tb>><%= user.name %></tb>
          <tb><%= link_to "show", user_path(user.id) %></tb>
          <% end %>
          </th>
        </tbody>
      </table>
    </div>
  </div>
</div>