<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maxmum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navber-collapse" id="navberNavDropdown">
            <ul class="navber-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <i class="fas fa-home"></i>
            <%= link_to "Home", user_path(current_user.id) %>
            </li>
            <li class="nav-item">
              <i class="fas fa-users"></i>
            <%= link_to "Users", users_path %>
            </li>
            <li class="nav-item">
              <i class="fas fa-book-open"></i>
            <%= link_to "Books", books_path %>
            </li>
            <li class="nav-item">
              <i class="fas fa-sign-in-alt"></i>
            <%= link_to "Log out", destroy_user_session_path, method: :delete %>
            </li>
            <% else %>
            <li class="nav-item">
              <i class="fas fa-home"></i>
              <%= link_to "Home", users_path %>
            </li>
            <li class="nav-item">
              <i class="fas fa-home"></i>
              <%= link_to "About", about_path %>
            </li>
            <li class="nav-item">
              <i class="fas fa-user-plus"></i>
            <%= link_to "Sign Up", new_user_registration_path %>
            </li>
            <li class="nav-item">
              <i class="fas fa-sign-in-alt"></i>
             <%= link_to "Log in", new_user_session_path %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="bg-white text-black pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
